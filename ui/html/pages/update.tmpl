{{define "title"}}Update{{end}}

{{define "main"}}
    <h2>Update Post</h2>
    <form action='/posts/update/{{ .Post.ID }}' method='POST'>
        <div class="flex_row_between">
            <div>
                <label for="author">Author:</label>
                <input type="text" id="author" name="author" value="{{ .Post.Author }}" required>
            </div>

            <div>
                <label for="slug">Slug (URL-friendly):</label>
                <input type="text" id="slug" name="slug" value="{{ .Post.Slug }}" required>
            </div>
        </div>

        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="{{ .Post.Title }}" required>

        <label for="excerpt">Excerpt:</label>
        <textarea id="excerpt" name="excerpt" rows="3">{{ .Post.Excerpt }}</textarea>

        <label for="content">Content (Markdown):</label>
        <textarea id="content" name="content" rows="18" required>{{ .Post.Content }}</textarea>

        <input type="submit" value="Update Post">
    </form>
{{end}}